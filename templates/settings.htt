<script>
    $(function () {

        $('#radiosOperationSystem input[type="radio"]').each(function () {
            if (this.checked && this.value === 'windows') {
                $('.form-write-rights').hide();
            }
        }).on('change', function () {
            if (this.value === 'linux') {
                $('.form-write-rights').show();
            } else {
                $('.form-write-rights').hide();
            }
        });

        $('#wbmailerFunction input[type="radio"]').on('change', function () {
            if (this.value === 'smtp') {
                $('.form-smtp-settings').show();
            } else {
                $('.form-smtp-settings').hide();
            }
        });

    });
</script>

