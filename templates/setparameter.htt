<!DOCTYPE html>
<html>
    <head>
        <title>Set upload parameter</title>

        <!-- Theme meta data -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Website meta data -->
        <meta name="description" content="Set upload parameter" />
        <meta name="keywords" content="Set upload parameter" />
        <meta name="author" content="Jonathan Nessier, Neoflow" />

        <!-- Theme favicons -->
        <link href="../../templates/fraggy-backend-theme/images/favicons/favicon-32x32.png" rel="icon" type="image/png" sizes="32x32" />
        <link href="../../templates/fraggy-backend-theme/images/favicons/favicon-16x16.png" rel="icon" type="image/png" sizes="16x16" />
        <link href="../../templates/fraggy-backend-theme/images/favicons/favicon.ico" rel="shortcut icon" />

        <!-- Theme CSS -->
        <link id="switchable" href="../../templates/fraggy-backend-theme/css/green.min.css?v1.7.0-alpha2" rel="stylesheet" type="text/css" />
        <script>
            if (localStorage.getItem('stylesheetUrl')) {
                document.getElementById('switchable').setAttribute('href', localStorage.getItem('stylesheetUrl'));
            }
        </script>

        <!-- Theme third-party vendor fonts -->
        <link href="//fonts.googleapis.com/css?family=Roboto+Condensed:400,400italic,700%7CRoboto:400,400italic,500,700,900" rel="stylesheet" type="text/css" />

        <!-- Custom CSS -->
        <style type="text/css">
            body {
                min-height: fit-content;
                background: #fff;
            }

            .hide {
                display: none;
            }
        </style>

        <!-- Initiliaze vars -->
        <script>
            var WB_URL = '../..',
                    THEME_URL = '../../templates/fraggy-backend-theme',
                    ADMIN_URL = '{ADMIN_URL}';
        </script>

        <!-- Theme jQuery -->
        <script src="../../templates/fraggy-backend-theme/js/jquery.min.js?v1.7.0-alpha2"></script>

        <!-- WBCE helper JavaScript -->
        <script src="../../include/jquery/jquery-insert.js"></script>
        <script>
            function confirm_link(message, url) {
                if (confirm(message))
                    location.href = url;
            }
        </script>

        <!-- Theme JavaScript -->
        <script src="../../templates/fraggy-backend-theme/js/script.min.js?v1.7.0-alpha2"></script>
        <script>
            $(document).ready(function () {
                Theme.init();
            });
        </script>

    </head>
    <body>

        <div class="container-fluid">

            <h4>{TEXT_HEADER}</h4>

            <form method="post" action="{ADMIN_URL}/media/setparameter.php" class="{DISPLAY_LIST_TABLE} form-horizontal">
                <input type="hidden" name="dir" value="{DIR}" />
                <input type="hidden" name="old_name" value="{FILENAME}" />
                <input type="hidden" name="id" value="{FILE_ID}" />
                {FTAN}

                <div class="form-group {DISPLAY_ADMIN}">
                    <label class="col-sm-2 control-label">{SETTINGS}</label>
                    <div class="col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="show_thumbs" {NO_SHOW_THUMBS_SELECTED}> {NO_SHOW_THUMBS}
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="admin_only" {ADMIN_ONLY_SELECTED}> {ADMIN_ONLY}
                            </label>
                        </div>
                    </div>
                </div>
                <hr />
                <!-- BEGIN list_block -->
                <div class="form-group">
                    <label class="col-sm-4 control-label">{PATH_NAME}</label>
                    <label class="col-sm-2 control-label">{WIDTH}</label>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <input size="5" type="text" class="form-control" name="{FIELD_NAME_W}" value="{CUR_WIDTH}">
                            <div class="input-group-addon">px</div>
                        </div>
                    </div>
                    <label class="col-sm-2 control-label">{HEIGHT}</label>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <input size="5" type="text" class="form-control" name="{FIELD_NAME_H}" value="{CUR_HEIGHT}">
                            <div class="input-group-addon">px</div>
                        </div>
                    </div>
                </div>
                <!-- END list_block -->
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit" name="save"><i class="fa fa-fw fa-floppy-o"></i> {SAVE_TEXT}</button>
                        <a href="browse.php" class="btn btn-default">
                            <i class="fa fa-fw fa-arrow-circle-left"></i> {BACK}
                        </a>
                    </div>
                </div>
            </form>

        </div>

    </body>
</html>
<!-- END main_block -->